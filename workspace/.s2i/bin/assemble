#!/bin/bash

set -x

set -eo pipefail

# Copy files to working directory.

shopt -u dotglob

cp -rf /tmp/src/* .

rm -rf /tmp/src

# Move configuration files into place.

mv configs/motd /opt/app-root/etc/
mv configs/rc.local /opt/app-root/etc/init.d/
mv configs/sh.local /opt/app-root/etc/profile.d/

rmdir configs

# Fix up permissions in application area.

fix-permissions /opt/app-root
